<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d32f2f" />
            <gradient android:angle="-90" android:endColor="#ff6659" android:startColor="#345953" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d32f2f" />
            <solid android:color="#ff6659" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d32f2f" />
            <gradient android:angle="-90" android:endColor="#9a0007" android:startColor="#ff6659" />
        </shape>
    </item>
</selector>